<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#E9000000"
        android:orientation="vertical">


        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            android:textSize="64sp"
            tools:text="0"
            android:textAlignment="textEnd"
            android:layout_margin="16dp"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#E9000000">

        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#99C1BFBF"
            android:onClick="click"
            android:text="AC"
            android:textSize="34sp" />

        <Button
            android:id="@+id/isaret"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#99C1BFBF"
            android:onClick="click"
            android:text="+/-"
            android:textSize="34sp" />

        <Button
            android:id="@+id/yuzde"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#99C1BFBF"
            android:onClick="click"
            android:text="%"
            android:textSize="34sp" />

        <Button
            android:id="@+id/bol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D68711"
            android:onClick="click"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="34sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#E9000000">

        <Button
            android:id="@+id/yedi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="7"
            android:textSize="34sp" />

        <Button
            android:id="@+id/sekiz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="8"
            android:textSize="34sp" />

        <Button
            android:id="@+id/dokuz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="9"
            android:textSize="34sp" />

        <Button
            android:id="@+id/carp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D68711"
            android:onClick="click"
            android:text="*"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#E9000000">

        <Button
            android:id="@+id/dort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="4"
            android:textSize="34sp" />

        <Button
            android:id="@+id/bes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="5"
            android:textSize="34sp" />

        <Button
            android:id="@+id/alti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/cikar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D68711"
            android:onClick="click"
            android:text="-"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#E9000000">

        <Button
            android:id="@+id/bir"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="1"
            android:textSize="34sp" />

        <Button
            android:id="@+id/iki"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="2"
            android:textSize="34sp" />

        <Button
            android:id="@+id/uc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="3"
            android:textSize="34sp" />

        <Button
            android:id="@+id/topla"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D68711"
            android:onClick="click"
            android:text="+"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#E9000000">

        <Button
            android:id="@+id/sifir"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="0"
            android:textSize="34sp" />


        <Button
            android:id="@+id/nokta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CD524C57"
            android:onClick="click"
            android:text="."
            android:textSize="34sp" />

        <Button
            android:id="@+id/esit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D68711"
            android:onClick="click"
            android:text="="
            android:textSize="34sp" />

    </LinearLayout>
</LinearLayout>